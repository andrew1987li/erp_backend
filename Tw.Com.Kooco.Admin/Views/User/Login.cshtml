@using jIAnSoft.Framework.Configuration;
@model Tw.Com.Kooco.Admin.Models.InternalDataTransferToView
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";

    bool IsTest = Section.Get.Common.IsTest;
}

<!-- BEGIN LOGIN FORM -->

<h3 class="form-title">Sign In</h3>

<div class="alert alert-danger display-hide">
    <button class="close" data-close="alert"></button>
    <span id="message">
    </span>
</div>
<div class="form-group">
    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
    <label class="control-label visible-ie8 visible-ie9">Account</label>
    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Account" id="account" name="account" autofocus />
</div>
<div class="form-group">
    <label class="control-label visible-ie8 visible-ie9">Password</label>
    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="pw" name="pw" />
</div>
<div class="form-actions">
    <button type="button" class="btn btn-success uppercase js_SignIn">Login</button>
</div>

<div class="create-account">
    <p>
        @Html.ActionLink("CREATE AN ACCOUNT", "Register", "User", null, new { @id = "register-btn", @class = "uppercase" })
    </p>
</div>

<!-- END LOGIN FORM -->